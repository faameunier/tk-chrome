{
  "name": "Tabby",
  "version": "0.0.1",
  "version_name": "beta",
  "description": "Make Chrome focus-friendly",
  "permissions": ["tabs", "storage", "sessions", "idle"],
  "background": {
    "persistent": false,
    "page": "./views/background.html"
  },
  "browser_action": {
    "default_popup": "./views/popup.html",
    "default_icon": {
      "16": "./assets/static/icons/tabby_icon_16.png",
      "32": "./assets/static/icons/tabby_icon_32.png",
      "48": "./assets/static/icons/tabby_icon_48.png",
      "128": "./assets/static/icons/tabby_icon_128.png"
    }
  },
  "icons": {
    "16": "./assets/static/icons/tabby_icon_16.png",
    "32": "./assets/static/icons/tabby_icon_32.png",
    "48": "./assets/static/icons/tabby_icon_48.png",
    "128": "./assets/static/icons/tabby_icon_128.png"
  },
  "manifest_version": 2
}
